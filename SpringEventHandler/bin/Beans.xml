<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="message" class="com.spring.model.Message">
		<property name="messageId" value="1001"></property>
		<property name="message" value="Hello Event"></property>
	</bean>

	<bean class="com.spring.event.ContextStartedEventHandler"></bean>
	<bean class="com.spring.event.ContextStoppedEventHandler"></bean>
	

</beans>
